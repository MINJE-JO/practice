generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Brand {
  WILSON
  BABOLAT
  HEAD
  YONEX
}

enum StringPattern {
  PATTERN_16x19
  PATTERN_16x20
  PATTERN_18x20
  PATTERN_14x16
}

model Racket {
  id            Int           @id @default(autoincrement())
  name          String
  brand         Brand         // 윌슨/바볼랏/헤드/요넥스 중 선택
  weight        Int           // 무게 (g)
  stringPattern StringPattern // 미리 정의된 패턴 중 선택
  balance       Int           // 밸런스 포인트 (mm)
}